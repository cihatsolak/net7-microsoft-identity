@model ChangePasswordViewModel

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h4>Change Password</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="PasswordChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-danger btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Member">Back to Home</a>
</div>

