@model ResetPasswordConfirmModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <h4>
            Create new password
        </h4>
        <hr />
        <form asp-action="ResetPasswordConfirm">
            @Html.HiddenFor(p => p.UserId)
            @Html.HiddenFor(p => p.Token)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReNewPassword" class="control-label"></label>
                <input asp-for="ReNewPassword" class="form-control" />
                <span asp-validation-for="ReNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create new password" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SignIn">Back to Sign In</a>
</div>

